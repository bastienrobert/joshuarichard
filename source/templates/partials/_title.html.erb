<div id="title">
  <h1><%= project.name %></h1>
  <% unless project.website.nil? %>
    <%= link_to t('project.website'), project.url, class: 'website', target: '_blank' %>
  <% end %>
  <% project[locale.to_s].explain.each do |p| %>
    <p><%= p %></p>
  <% end %>
  <div class="team">
    <% if project.team != nil %>
      <p>Travail en Ã©quipe avec :
        <% project.team.each_with_index do |(name, url), index| %>
          <%= link_to name, url, target: '_blank' %><%= ', ' if index + 1 != project.team.length %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
